<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VietTech_MD_12"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".presentations.screens.checkout.CheckoutItemsScreen"
            android:exported="false"
            android:label="@string/title_activity_checkout_items_screen"
            android:theme="@style/Theme.VietTech_MD_12" />
        <activity
            android:name=".presentations.screens.checkout.CheckoutShippingScreen"
            android:exported="false"
            android:label="@string/title_activity_checkout_items_screen"
            android:theme="@style/Theme.VietTech_MD_12" />
        <activity
            android:name=".presentations.screens.cart.CartScreen"
            android:exported="false"
            android:label="@string/title_activity_checkout_shipping_screen"
            android:theme="@style/Theme.VietTech_MD_12" />
        <activity
            android:name=".presentations.screens.authentication.LoginScreen"
            android:exported="false"
            android:label="@string/title_activity_sign_in_screen"
            android:theme="@style/Theme.VietTech_MD_12" />
        <activity
            android:name=".presentations.screens.authentication.RegisterScreen"
            android:exported="false"
            android:label="@string/title_activity_sign_up_screen"
            android:theme="@style/Theme.VietTech_MD_12" />
        <activity
            android:name=".presentations.screens.authentication.EmailVertificationScreen"
            android:exported="false"
            android:label="@string/title_activity_sign_up_screen"
            android:theme="@style/Theme.VietTech_MD_12" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/title_activity_cart_screen"
            android:theme="@style/Theme.VietTech_MD_12" />
        <activity
            android:name=".presentations.screens.ProductDetailScreen"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.VietTech_MD_12">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>